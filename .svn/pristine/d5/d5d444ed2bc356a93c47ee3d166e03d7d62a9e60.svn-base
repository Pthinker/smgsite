// Doctor pages styles

.condition-search-bg {
    background-color: @finder-color;
    height: 60px;
    margin-bottom: 20px;
    padding-top: 12px;
    color: #fff;
    text-align: center;
    label {
        font-size: 18px;
        font-weight: normal;
        margin-right: 20px;
    }
    .form-inline .form-control {
        width: 300px;
    }
}

.doctor-result {
    text-align: center;
    margin-bottom: 20px;
    img {
        margin-bottom: 10px;
        padding: 4px;
        border: solid silver 1px;
        width: 115px;
        height: 162px;

    }
    h3 {
        text-align: left;
    }
    a {
        .smg-link(@doctor-color);
        display: block;
    }
    .info {
        height: 100px;
    }
    .service-name {
        text-align: center;
    }
    .accepting {
        text-align: center;
    }
}

#facets {
    @media (min-width: @screen-xs-max) {
        .panel-body {
            max-height: 220px;
            overflow-y: scroll;
        }
    }
}

.doctor-details {
    .title {
            color: @doctor-color;
            margin-top: 0px;
            margin-bottom: 6px;
            text-transform: uppercase;
            font-weight: bold;
    }

    .services {
        font-size: 18px;
        margin-bottom: 20px;
    }
    .main-image {
        padding: 6px;
        border: 4px solid @doctor-color;
        margin-bottom: 20px;
    }
    i {
       color: @doctor-color; 
    }
    .status {
        i {
            font-size: 16px;
            margin-right: 9px;
        }
    }
    .accepting {
        i {
            color: @brand-success;
        }
    }
    .not-acccepting {
        i {
            color: @brand-danger;
        }
    }
    .options {
        i {
            margin-right: 10px;
        }
    }

    .doctor-color {
        color: @doctor-color;
    }
    .notes {
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 6px solid @doctor-color;
    }
    h4 {
        font-weight: bold;
        text-transform: uppercase;
    }
    h3 {
        color: @doctor-color;
    }
    .doctor-address {
        margin-bottom: 20px;
    }
    .doctor-address, .doctor-number, .phone-note {
        position: relative;
        i {
            position: absolute;
            font-size: 20px;
        }
        .cont {
            margin-left: 30px;
        }
    }

    .phone-note {
        i {
            color: #c51331;
        }
        b {
            color: #01457c;
        }
    }

    .creds {
        position: relative;
        .title {
            font-weight: bold;
        }
        i {
            
            position: absolute;
            font-size: 18px;
        }
        .cont {
            margin-right: 24px;
            margin-left: 28px;
        }
    }
}

#alpha-list {
    margin-bottom: 10px;
    margin-top: 10px;
    text-align: center;
    .pagination > li > a {
        padding: 2px 8px;
        font-weight: bold;
    }

}