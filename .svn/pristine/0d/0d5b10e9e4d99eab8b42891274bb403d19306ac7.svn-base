{% extends "page_primary.html" %}
{% load helpers %}

{% block head_title %}Summit Medical Group - Careers{% endblock head_title %}

{% block meta_info %}Summit Medical Group offers a variety of different employment opportunities. See our open positions to find a job suitable to your experience and goals.{% endblock meta_info %}

{% block head_extra %}
	<link rel="stylesheet"  href="/dynamic-css/careers.css" type="text/css" media="screen" />
	<script src="{{ MEDIA_URL }}js/page_tools.js" type="text/javascript" charset="utf-8"></script>
	<script type="text/javascript" charset="utf-8">
	<!--
		var blank_url = "{{ MEDIA_URL }}/images/95x95_loading.jpg";
		var error_url = "{{ MEDIA_URL }}/images/95x95_not_avail.jpg";
	-->
	</script>
	<script src="{{ MEDIA_URL }}/js/doctor_flyover.js" type="text/javascript" charset="utf-8"></script>
		
	<style type="text/css">
	.absolute-8 select {
	   behavior:expression(window.dropdown_menu_hack!=null?window.dropdown_menu_hack(this):0);
	}
	</style>
	
	<script type="text/javascript">
	var mysmg_model = "service";
	var mysmg_title = "{{ service.name }}";
	var mysmg_pk = "{{ service.pk }}";
	</script>
	
{% endblock head_extra %}

{% block content %}
<!-- start of main blocks -->
<div id="main_block" class="main_block">
	<div class="main_block_sub_1">
		<div class="main_block_sub_2">
			
			<!-- start of main blocks column right -->
			<div class="right_main_block">
				<div class="right_sub_main_block">
				
					
					
					<div class="career_intro_container">

							<h1>Careers</h1>
							<br>

							<h2>Thank you for your interest in Summit Medical Group!</h2>
							<p>Summit Medical Group offers outstanding employment opportunities. We look for employees who are motivated to contribute their expertise and positive approach to enhance patient care and our organization as a whole.</p>
							<p>Please use the search tools on the left to find a position aligned with your experience and goals.</p>							
				
							<h3>How To Apply</h3>
							<ul>
								<li><h4><strong>Send your resum√© and a cover letter to&nbsp;</strong><a href="mailto:hr@smgnj.com">hr@smgnj.com</a></h4></li>
								<li><h4><strong>Specify the job for which you are applying</strong></h4></li>
								<li><h4><strong>Call 908-277-8791 if you have questions</strong></h4></li>
								</ul>
					
							<p><a href="http://www.linkedin.com/company/summit-medical-group-of-berkeley-heights-nj" onClick="recordOutboundLink(this, 'Outbound Links', 'LinkedIn');return false;">We encourage you to connect with us on LinkedIn.</a></p>


					</div>

					{% if results %}
					<div id="careers_search_results_container">
					<!--Results displayed only after values are selected in the form on the left -->

						{% for result in results %}
						<div class="career_posting{% cycle ' shaded_row' '' %}">
						<h3>{{ result.job_title }}</h3>
						<p><strong>Job Description:</strong> {{ result.description }}</p>
						
						<table class="career_details_table" width="100%" cellpadding="0" cellspacing="0">
								
							<tr>
								<td><strong>Department: </strong>{{ result.department }}</td> 
								<td><strong>Specialty/Service: </strong>{% if result.service %}{{ result.service }}{% else %}None specified{% endif %}</td>
							</tr>
							
							<tr>
								<td><strong>Location(s): </strong>
{% if result.location.display_name %}
{{ result.location.display_name }},<br /> 
{% endif %}
{{ result.location.address }}<br />
{% if result.location.address2 %}
{{ result.location.address2 }}<br />
{% endif %}
{% if event.room %}
{{ event.room }}<br />
{% endif %}
{{ result.location.city }}, {{ result.location.state }}
																			</td>
								<td><strong>Shift Type: </strong>{{ result.shift_type_str }}</td>
							</tr>
							
							<tr> 
								<td><strong>Shift: </strong>{{ result.shift_time_str }}</td>
								<td><strong>Benefits Eligible: </strong>{{ result.get_benefits_display }}</td>
							</tr>
							
						</table>
							
						<p class="career_date_posted">Date Posted: {{ result.date_posted }}</p>									
						</div>
						{% endfor %}
					</div>
					{% else %}
					{% if searched %}
					<p style="color:#C03;"><strong>Your search did not return any results. Try other options, or leave all options blank to browse all positions.</strong></p>
					{% endif %}
					{% endif %}



					
				</div>
				
			
			</div>
			<!-- end of main blocks column right -->



			<!-- start of main blocks column left -->
			<div class="left_main_block">
							<div class="box_207 box_207_blue mt10">
									<div class="box_207_bottom">
										<div class="box_207_top">

											<h2 class="quick_links">Search Career Postings</h2>
											<div class="rain_box_wrap_0_6_28">
												<div class="rain_box">



													<div id="careers_search_form_container">

														
														<p>You can narrow down your search further by selecting from the options below and click <strong>"Search"</strong>. To view all jobs, just click <strong>"Search"</strong> with no options selected.</p>


														<form id="careers_search_form" class="go_form_my" method="get" action="">

															<label for="id_job_title">Job title: </label>
															<div class="relative-40">
																<div class="absolute-8">&nbsp;
																	{{ form.job_title }}
																</div>
															</div>
															
															<label for="id_department">Department: </label>
															<div class="relative-40">
																<div class="absolute-8">&nbsp;
																	{{ form.department }}
																</div>
															</div>

															<label for="id_shift_type">Shift type: </label>
															<div class="relative-40">
																<div class="absolute-8">&nbsp;
																	{{ form.shift_type }}
																</div>
															</div>
															
															<input type="hidden" name="search" value="search" />
															<div class="search_button">
																<input type="submit" name="submit" id="submit_search_career" value="" />
															</div>
														</form>
													</div>


												</div>
											</div>

										</div>
									</div>
								</div>

				
				
				
																
										<div class="mt10">
											{% banner %}</div>
			</div>
			<!-- end of main blocks column left -->

		</div>
	</div>
<div class="clear"></div>
</div>
<!-- end of main blocks -->
{% endblock content %}
